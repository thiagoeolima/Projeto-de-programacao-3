package models;

import java.sql.*;

public class Teste {

	static final String JDBC_DRIVER = "com.mysql.jdbc.Driver";
	static final String DATABASE_URL = "jdbc:mysql://192.168.0.112/gestaoderecursos";

	public static void main(String[] args) throws Exception {
		Connection connection = null;
		Statement statement = null;
		try {
			Class.forName(JDBC_DRIVER);
			connection = DriverManager.getConnection(DATABASE_URL, "root",
					"12345678");
			statement = connection.createStatement();
			ResultSet resulSet = statement
					.executeQuery("SELECT name FROM user");
			ResultSetMetaData metaData = resulSet.getMetaData();
			int numberOfColumns = metaData.getColumnCount();
			System.out.println("USER: ");
			for (int i = 1; i <= numberOfColumns; i++) {
				System.out.printf("%-8s\t", metaData.getColumnName(i));
			}
			System.out.println();
			while (resulSet.next()) {
				for (int i = 1; i <= numberOfColumns; i++) {
					System.out.printf("%-8s\t", resulSet.getObject(i));
				}
				System.out.println();
			}
		} catch (SQLException sqlException) {
			sqlException.printStackTrace();
			System.exit(1);
		} finally {
			try {
				statement.close();
				connection.close();
			} catch (Exception exception) {
				exception.printStackTrace();
				System.exit(1);
			}
		}
	}
}